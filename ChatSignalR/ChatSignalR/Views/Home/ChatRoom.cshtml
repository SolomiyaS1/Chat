@model ChatSignalR.Models.User
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <title>Chat Room</title>
  
</head>
<body>
<div class="main">
    <input id="txtUserName" type="hidden" value="@Model.Name"/>
    <input id="btnLogin" type="button" value="Enter" style="display: none;"/>
    <div id="chatBody">
        <div id="header"></div>
        <div id="inputForm">
            <input type="button" id="sendmessage" value="Send" />
            <textarea id="message" style="overflow: scroll; resize: none" maxlength="250" rows="6"></textarea>

        </div>
        <div id="chatroom"></div>

        <div id="chatusers">
            <p><b>Other users online</b></p>
        </div>
    </div>
    <input id="hdId" type="hidden"/>
    <input id="username" type="hidden"/>
</div>

    <script src="~/Scripts/jquery-1.8.0.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/chat.js"></script>
</body>
</html>